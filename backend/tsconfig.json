{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "strictPropertyInitialization": false,
    "resolveJsonModule": true,
    "allowJs": true,
    "baseUrl": "./src",
    "paths": {
      "@modules/*": ["./modules/*"],
      "@config/*": ["./config/*"],
      "@shared/*": ["./shared/*"],
      "@tests/*": ["./__tests__/*"]
    },
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
